@model ServiceAssetTracker.Models.ResellerViewModels.Job_Reference

@{
    ViewData["Title"] = "Job Reference Details";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Job Reference</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Job Reference Details
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label asp-for="JobReferenceId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Job Reference Id
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="JobReferenceId" type="text" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerReference" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Customer Reference
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="CustomerReference" type="text" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="MojoReference" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Mojo Reference
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="MojoReference" type="text" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="WorkflowReference" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Workflow Max Reference
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="WorkflowReference" type="text" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Reseller Customer
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="CustomerId" value="@Model.Customer.TradingName" type="text" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Service
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" value="NA" readonly class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                    <a asp-action="Edit" asp-route-id="@Model.JobReferenceId" class="btn btn-success">Edit</a>
                                    <a data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    @Html.Partial("_DeleteModal");
    var url = "/Job_Reference/DeleteConfirmed/" + Model.JobReferenceId;
}
<input type="hidden" id="hdnUrl" value="@url" />
