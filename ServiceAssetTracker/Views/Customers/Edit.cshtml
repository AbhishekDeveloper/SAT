@model ServiceAssetTracker.Models.ResellerViewModels.Customer

@{
    ViewData["Title"] = "Edit Reseller Customer";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller Customer</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Edit Reseller Customer Account
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form asp-action="Edit" data-parsley-validate class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CustomerId" />
                            <div class="form-group">
                                <label asp-for="CustomerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Customer ID
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label class="control-label">@Model.CustomerId</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResellerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Reseller ID
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @*<input asp-for="ResellerId" type="text" required="required" autofocus class="form-control col-md-7 col-xs-12" asp-items="ViewBag.ResellerId">*@
                                    <select asp-for="ResellerId" class="form-control  col-md-7 col-xs-12" asp-items="ViewBag.ResellerId"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="TradingName" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Trading Name
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="TradingName" input type="text" required="required" autofocus class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address1" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Address line 1
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Address1" required="required" class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address2" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Address line 2
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Address2" required="required" class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="City" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    City
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="City" required="required" class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContractName" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Contact Name
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="ContractName" required="required" class="form-control col-md-7 col-xs-12" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Email
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Email" class="form-control col-md-7 col-xs-12" required="required" type="email" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Phone Number
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Phone" class="form-control col-md-7 col-xs-12" required="required" type="tel" />
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a class="btn btn-primary" asp-action="Index">Back to list</a>
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>