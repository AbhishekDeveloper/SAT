@model IEnumerable<ServiceAssetTracker.Models.ResellerViewModels.Customer>

@{
    ViewData["Title"] = "Reseller Customer";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller Customer</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Reseller Customer</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a style="color: white;" asp-action="Create" class="btn btn-primary">Add Reseller Customer</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr class="headings">
                                    <th>
                                        @Html.DisplayNameFor(model => model.CustomerId)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Reseller)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.TradingName)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Address1)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.City)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.ContractName)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.CustomerId">
                                                @Html.DisplayFor(modelItem => item.CustomerId)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Reseller.TradingName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TradingName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContractName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>