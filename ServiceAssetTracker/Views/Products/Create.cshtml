@model ServiceAssetTracker.Models.ResellerViewModels.Product

@{
    ViewData["Title"] = "Add DLSM Product";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller DLSM Product</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Add DLSM Product
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form asp-action="Create" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label asp-for="ResellerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Reseller ID
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select asp-for="ResellerId" asp-items="ViewBag.ResellerId" class="form-control col-md-7 col-xs-12"></select>
                                    <span asp-validation-for="ResellerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Name
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Name" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResellerServiceId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Service ID
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select asp-for="ResellerServiceId" asp-items="ViewBag.ResellerServiceId" class="form-control col-md-7 col-xs-12"></select>
                                    <span asp-validation-for="ResellerServiceId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Price
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Price" class="form-control col-md-7 col-xs-12">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Term" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Term/Duration
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Term" class="form-control col-md-7 col-xs-12">
                                    <span asp-validation-for="Term" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="form-group">
                                <label asp-for="Allocated" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Allocated
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" asp-for="Allocated" class="form-control col-md-7 col-xs-12">
                                    <span asp-validation-for="Allocated" class="text-danger"></span>
                                </div>
                            </div>*@
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

