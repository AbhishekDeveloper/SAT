@model ServiceAssetTracker.Models.ResellerViewModels.Product

@{
    ViewData["Title"] = "Product Details";
    var Allocated = Model.Allocated ? "Yes" : "No";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller DLSM Product</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Product Details
                        </h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label asp-for="ProductId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Product ID
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="ProductId" type="text" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResellerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Reseller ID
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="ResellerId" value="@Model.Reseller.TradingName" type="text" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Name
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Name" type="text" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResellerServiceId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Service ID
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="ResellerServiceId" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Price
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Price" type="text" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Term" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Text/Duration
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="Term" type="text" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Allocated" class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Allocated
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" value="@Allocated" disabled class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a asp-action="Index" class="btn btn-primary">Back To List</a>
                                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-success">Edit</a>
                                    <a asp-action="Create" class="btn btn-warning">Copy</a>
                                    <a data-toggle="modal" data-target="#deleteModal" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    @Html.Partial("_DeleteModal");
    var url = "/Products/DeleteConfirmed/" + Model.ProductId;
}
<input type="hidden" id="hdnUrl" value="@url" />
