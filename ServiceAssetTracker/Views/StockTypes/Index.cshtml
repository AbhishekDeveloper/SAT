@model IEnumerable<ServiceAssetTracker.Models.ResellerViewModels.StockType>

@{
    ViewData["Title"] = "Stock Type";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Stock Type</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Stock Type</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a style="color: white;" data-toggle="modal" data-target="#CreateModal" class="btn btn-primary">Add Stock Type</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th class="column-title">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th class="column-title">Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <a data-toggle="modal" data-target="#editModal" onclick="editOpen('@item.Id','@item.Name')" class="btn btn-success btn-xs"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                            <a data-toggle="modal" data-target="#deleteModal" onclick="deleteOpen('@item.Id')" class="btn btn-danger btn-xs"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_CRUDModals")
