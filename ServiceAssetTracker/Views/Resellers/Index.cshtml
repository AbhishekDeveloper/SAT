@model IEnumerable<ServiceAssetTracker.Models.ResellerViewModels.Reseller>

@{
    ViewData["Title"] = "List Reseller";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Reseller</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a asp-action="Create" style="color: white;" class="btn btn-primary">Add Reseller</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Reseller ID </th>
                                    <th class="column-title">Trading Name</th>
                                    <th class="column-title">Address</th>
                                    <th class="column-title">City</th>
                                    <th class="column-title">Contact Name</th>
                                    <th class="column-title">Email</th>
                                    <th class="column-title no-link last">Phone number</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.ResellerId">
                                                @Html.DisplayFor(modelItem => item.ResellerId)
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.TradingName)</td>
                                        <td>
                                            @Html.DisplayNameFor(model => model.Address1), 
                                            @Html.DisplayFor(modelItem => item.Address2)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ContractName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

