@model ServiceAssetTracker.Models.ResellerViewModels.Reseller_Service

@{
    ViewData["Title"] = "Edit Reseller Service";
}


<div class="row">

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Reseller Service</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>
                                Edit Reseller Service
                            </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form asp-action="Edit" data-parsley-validate class="form-horizontal form-label-left">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ResellerServiceId" />
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Service ID
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label class="control-label">@Model.ResellerServiceId</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ResellerId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Reseller ID
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select asp-for="ResellerId" autofocus class="form-control col-md-7 col-xs-12" asp-items="ViewBag.ResellerId">
                                            <option selected>Select</option>
                                        </select>
                                        <span asp-validation-for="ResellerId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ShortDescription" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Short Description
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input asp-for="ShortDescription" autofocus class="form-control col-md-7 col-xs-12" />
                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Category ID
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                            <option selected>Select</option>
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Task" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Task
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input asp-for="Task" class="form-control col-md-7 col-xs-12" />
                                        <span asp-validation-for="Task" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Price
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input asp-for="Price" class="form-control col-md-7 col-xs-12" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Metric" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Metric
                                        <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input asp-for="Metric" class="form-control col-md-7 col-xs-12" />
                                        <span asp-validation-for="Metric" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <a asp-action="Index" class="btn btn-primary">Back To List</a>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
