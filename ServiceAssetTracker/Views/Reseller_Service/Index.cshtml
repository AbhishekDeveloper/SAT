@model IEnumerable<ServiceAssetTracker.Models.ResellerViewModels.Reseller_Service>

@{
    ViewData["Title"] = "List Reseller Services";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reseller Service</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Reseller Service</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a asp-action="" class="btn btn-success">Import CSV</a>
                            </li>
                            <li>
                                <a asp-action="Create" class="btn btn-primary">Add Reseller Service</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Service ID</th>
                                    <th class="column-title">Reseller ID </th>
                                    <th class="column-title">Short Description</th>
                                    <th class="column-title">Category ID</th>
                                    <th class="column-title">Task</th>
                                    <th class="column-title">Price</th>
                                    <th class="column-title no-link last">Metric</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Reseller_Service" asp-action="Details" asp-route-id="@item.ResellerServiceId">
                                                @Html.DisplayFor(modelItem => item.ResellerServiceId)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Reseller.TradingName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShortDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categories.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Task)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Metric)
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

