@model IEnumerable<ServiceAssetTracker.Models.CustomModels.cmPurchaseOrder>

@{
    ViewData["Title"] = "Purchase Order";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Purchase Order</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Purchase Order</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a asp-action="create" asp-controller="Purchase_order" style="color: white;" class="btn btn-primary">Add Purchase Order</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Order ID</th>
                                    <th class="column-title">Reseller </th>
                                    <th class="column-title">Customer</th>
                                    <th class="column-title">PO Reference</th>
                                    <th class="column-title">Product</th>
                                    <th class="column-title">Serial Numbers</th>
                                    <th class="column-title no-link last">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.PoId">@item.PoId</a>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.ResellerId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderReference)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                                        <td>NA</td>
                                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
